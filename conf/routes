# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/							controllers.Application.index()
GET		/hunt/reset					controllers.Application.reset()
POST 	/contact-us					controllers.Application.submitContactForm()

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file				controllers.Assets.at(path="/public", file)

# RDF
GET		/rdf/ontology				controllers.RDF.ontology()
GET 	/test/:hid/:format			controllers.RDF.hunt(hid: String, format: String)

# Game
GET 	/play						controllers.Game.home()
GET		/play/:hid					controllers.Game.playHunt(hid: String)
GET		/play/:hid/go				controllers.Game.go(hid: String)
GET		/play/:hid/go/next			controllers.Game.goNext(hid: String)

# Hunt
GET		/hunt/:hid/show				controllers.Hunt.show(hid: String)
GET		/hunt/create				controllers.Hunt.create()
POST	/hunt/create				controllers.Hunt.submitCreateForm()
GET		/hunt/:hid/update			controllers.Hunt.update(hid: String)
POST	/hunt/:hid/update			controllers.Hunt.submitUpdateForm(hid: String)
#POST	/hunt/:hid/delete			controllers.Hunt.delete(hid: String)
#POST	/hunt/:hid/publish			controllers.Hunt.publish(hid: String)
GET		/hunt/:hid/:format			controllers.Hunt.showRDF(hid: String, format: String)

#Tag
GET		/tag/:name/:format			controllers.Hunt.showTagRDF(name: String, format: String)

# Step
GET		/hunt/:hid/step/create		controllers.Step.create(hid: String)
POST	/hunt/:hid/step/create		controllers.Step.submitCreateForm(hid: String)
GET		/step/:sid/update			controllers.Step.update(sid: String)
POST	/step/:sid/update			controllers.Step.submitUpdateForm(sid: String)
#POST	/step/:sid/delete			controllers.Step.delete(sid: String)
GET		/step/:sid/:format			controllers.Step.showRDF(sid: String, format: String)

# Enigma
GET		/step/:sid/enigma/create	controllers.Enigma.create(sid: String)
POST	/step/:sid/enigma/create	controllers.Enigma.submitCreateForm(sid: String)
GET		/enigma/:eid/update			controllers.Enigma.update(eid: String)
POST	/enigma/:eid/update			controllers.Enigma.submitUpdateForm(eid: String)
#POST	/enigma/:eid/delete			controllers.Enigma.delete(eid: String)
GET		/enigma/:eid/:format		controllers.Enigma.showRDF(eid: String, format: String)

# Clue
GET		/clue/:cid/:format			controllers.Enigma.showClueRDF(cid: String, format: String)

# Answer
GET		/answer/:aid/:format		controllers.Enigma.showAnswerRDF(aid: String, format: String)

# User
GET		/logout						controllers.User.logout()
GET		/login						controllers.User.login()
POST	/login						controllers.User.submitLoginForm()
POST	/register					controllers.User.submitRegisterForm()
GET		/user/:uid/:format			controllers.User.showRDF(uid: String, format: String)

# Manager
GET		/dashboard					controllers.Manager.dashboard()

# Map
GET		/poi/trees					controllers.Map.getTreesMontpellierJSON()
GET		/poi/publicplaces			controllers.Map.getPublicPlacesMontpellierJSON()
GET		/poi/fountains				controllers.Map.getFoutainsMontpellierJSON()
GET		/poi/gardens				controllers.Map.getGardensMontpellierJSON()
GET 	/poi/greenspaces			controllers.Map.getGreenSpacesMontpellierJSON()
GET 	/poi/monuments				controllers.Map.getMonumentsMontpellierJSON()
GET		/routing					controllers.Map.routing()

# User
GET		/adm/users					controllers.AdminPanel.userlist()