GET		/clue/:cid/xml				controllers.Enigma.showClueXML(cid: String)
GET		/clue/:cid/turtle			controllers.Enigma.showClueTurtle(cid: String)

GET		/answer/:aid/xml			controllers.Enigma.showAnswerXML(aid: String)
GET		/answer/:aid/turtle			controllers.Enigma.showAnswerTurtle(aid: String)

# User
POST	/login						controllers.User.submitLoginForm()
GET		/logout						controllers.User.logout()
POST	/register					controllers.User.submitRegisterForm()
GET		/user/:uid/xml				controllers.User.showXML(uid: String)
GET		/user/:uid/turtle			controllers.User.showTurtle(uid: String)

# Manager
GET		/dashboard					controllers.Manager.dashboard()
