#POST	/hunt/:hid/delete			controllers.Hunt.delete(hid: String)
#GET	/hunt/:hid/show				controllers.Hunt.show(hid: String)
#POST	/hunt/:hid/publish			controllers.Hunt.publish(hid: String)

#POST	/hunt/:hid/step/create		controllers.Step.create(hid: String)

#GET	/step/:sid/edit				controllers.Step.edit(sid: String)
#POST	/step/:sid/update			controllers.Step.update(sid: String)
#POST	/step/:sid/delete			controllers.Step.delete(sid: String)
#POST	/step/:sid/enigma/create	controllers.Enigma.create(sid: String)
