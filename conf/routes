# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/							controllers.Application.index()
GET		/login						controllers.Application.login()
GET		/hunt/reset					controllers.Application.reset()
POST 	/contact-us					controllers.Application.submitContactForm()

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file				controllers.Assets.at(path="/public", file)


# Hunt
GET		/hunt/create				controllers.Hunt.create()
POST	/hunt/create				controllers.Hunt.submitCreateForm()
GET		/hunt/:hid/show				controllers.Hunt.show(hid: String)
GET		/hunt/:hid/xml				controllers.Hunt.showXML(hid: String)
GET		/hunt/:hid/turtle			controllers.Hunt.showTurtle(hid: String)

